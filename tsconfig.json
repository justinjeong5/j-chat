{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["./components/*"],
            "@app/*": ["./app/*"],
            "@lib/*": ["./lib/*"],
            "@socket/*": ["./socket/*"],
            "@hooks/*": ["./hooks/*"],
            "@hoc/*": ["./hoc/*"],
            "@models/*": ["./models/*"],
            "@repos/*": ["./repos/*"],
            "@t/*": ["./types/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true
    },
    "include": [
        "next-env.d.ts",
        "*.config.js",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
